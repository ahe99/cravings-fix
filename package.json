{
  "name": "e-commerce",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --filter './app/**' run dev",
    "start": "pnpm -r start",
    "build": "pnpm --filter=!api build",
    "dev:client": "pnpm run -C app/client dev",
    "dev:api": "pnpm run -C app/api dev",
    "dev:admin": "pnpm run -C app/admin dev",
    "format": "pnpm -r --filter './app/**' run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3"
  }
}
